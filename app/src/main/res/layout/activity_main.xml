<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.bmideas.michal.bmnotifier.Activities.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/TitleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Title" />

        <EditText
            android:id="@+id/BodyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Body" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Message" />

        <Button
            android:id="@+id/testEventButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rise Test Event" />

        <Button
            android:id="@+id/ButtonStopServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Services" />

        <Button
            android:id="@+id/ButtonStartServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Services" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
